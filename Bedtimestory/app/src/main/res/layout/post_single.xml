<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    style="@style/CardView.Light"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginBottom="4dp"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_margin="3dp"
    app:cardElevation="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:minHeight="250dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_weight="1"
            android:minHeight="100dp">

            <ImageView
                android:id="@+id/story_banner"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:contentDescription="@string/content"
                android:scaleType="centerCrop"
                android:background="@color/colorAsh"
                android:src="@drawable/story_banner" />
            <TextView
                android:id="@+id/premium_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Premium"
                android:textColor="@color/colorWhite"
                android:padding="4dp"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:visibility="gone"
                style="@style/TextAppearance.AppCompat.Title"
                android:background="@drawable/premium_bg"/>

            <TextView
                android:id="@+id/story_imgtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="24dp"
                android:layout_marginBottom="24dp"
                android:background="@android:color/transparent"
                android:text="Best tours"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/author_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toTopOf="@+id/reactionProgress"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/profile" />

            <TextView
                android:id="@+id/story_title"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="Tales of Snowwhite"
                android:textSize="14dp"
                app:layout_constraintBottom_toTopOf="@+id/reactionProgress"
                app:layout_constraintEnd_toStartOf="@+id/like_button"
                app:layout_constraintStart_toEndOf="@+id/author_image"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.195" />

            <TextView
                android:id="@+id/story_publish_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="3 minutes ago"
                android:textColor="#90000000"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@+id/like_button"
                app:layout_constraintStart_toEndOf="@+id/author_image"
                app:layout_constraintTop_toBottomOf="@+id/story_title" />

            <ImageButton
                android:id="@+id/dislike_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="8dp"
                android:background="@color/colorWhite"
                app:layout_constraintBottom_toTopOf="@+id/reactionProgress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/like_button"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/thumbs_down_hand_symbol" />

            <ImageButton
                android:id="@+id/like_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/colorWhite"
                app:layout_constraintBottom_toTopOf="@+id/reactionProgress"
                app:layout_constraintEnd_toStartOf="@+id/dislike_button"
                app:layout_constraintStart_toEndOf="@+id/story_title"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_thumbs_up_hand_symbol"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/badge_circle"
                android:textColor="#000"
                android:text="4"
                app:layout_constraintEnd_toEndOf="@id/like_button"
                app:layout_constraintBottom_toTopOf="@+id/like_button"
                app:layout_constraintStart_toEndOf="@+id/like_button"
                app:layout_constraintTop_toTopOf="@+id/like_button"
                app:layout_constraintVertical_bias="0.585" />
            <TextView
                android:id="@+id/dislikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/dislike_button_badge"
                android:textColor="#FFF"
                android:text="4"
                app:layout_constraintBottom_toTopOf="@+id/dislike_button"
                app:layout_constraintStart_toEndOf="@+id/dislike_button"
                app:layout_constraintEnd_toEndOf="@id/dislike_button"
                app:layout_constraintTop_toTopOf="@+id/dislike_button"
                app:layout_constraintVertical_bias="0.585" />

            <ProgressBar
                android:id="@+id/reactionProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"/>

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>